<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    >

    <TextView
        android:id="@+id/cdd_caption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/cdd_selected_date"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <FrameLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.AppCompatImageButton
            android:id="@+id/cdd_button_left"
            android:src="@drawable/ic_arrow_left"
            android:layout_gravity="left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/cdd_current_month"
            android:text="Current Month"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <android.support.v7.widget.AppCompatImageButton
            android:id="@+id/cdd_button_right"
            android:src="@drawable/ic_arrow_right"
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </FrameLayout>
    <LinearLayout
        android:id="@+id/yoil_layout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPink"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        >
        <TextView
            android:id="@+id/sunday"
            android:text="일"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="@color/colorWhite"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/monday"
            android:text="월"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="@color/colorWhite"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tuesday"
            android:text="화"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="@color/colorWhite"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/wednesday"
            android:text="수"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="@color/colorWhite"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/thursday"
            android:text="목"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="@color/colorWhite"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/friday"
            android:text="금"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="@color/colorWhite"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/saturday"
            android:text="토"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="@color/colorWhite"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/cdd_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        >
    </android.support.v7.widget.RecyclerView>

    <TimePicker
        android:id="@+id/cdd_time_picker"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:timePickerMode="spinner" />

    <!--<LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/cdd_cancel"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@android:string/cancel"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/cdd_ok"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@android:string/ok"
            android:layout_height="wrap_content" />
    </LinearLayout>-->

</LinearLayout>